<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="0in"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageVideo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="videoView"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/upload_video"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageVideo"
        android:text="Whats on your mind "
        android:background="@drawable/round_corner"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="61dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:onClick="getImage"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/imageupload"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_toRightOf="@+id/textView"
        android:src="@drawable/image_upload" />

</RelativeLayout>